{
  "$schema": "https://raw.githubusercontent.com/nicholasrice/tauri/refs/heads/next/.schema/desktop-schema.json",
  "productName": "Shpeegle Reader",
  "version": "0.1.0",
  "identifier": "com.shpeegle.reader",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "title": "Shpeegle Reader",
    "windows": [
      {
        "title": "Shpeegle Reader",
        "width": 1100,
        "height": 750,
        "minWidth": 800,
        "minHeight": 600,
        "decorations": true,
        "resizable": true
      }
    ],
    "security": {
      "csp": null,
      "assetProtocol": {
        "enable": true,
        "scope": ["**"]
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "dialog": {},
    "fs": {
      "scope": {
        "allow": ["**"],
        "requireLiteralLeadingDot": false
      }
    }
  }
}
